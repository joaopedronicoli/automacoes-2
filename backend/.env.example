# Environment
NODE_ENV=development

# Server
PORT=3000
APP_URL=https://api.jolu.ai
BACKEND_URL=https://api.jolu.ai/api
FRONTEND_URL=https://jolu.ai

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_NAME=automacoes

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=9
REDIS_PASSWORD=

# Security
ENCRYPTION_KEY=your_64_char_hex_encryption_key_here_00000000000000000000000000

# WhatsApp OTP (Meta Cloud API)
WHATSAPP_ACCESS_TOKEN=your_meta_permanent_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Email SMTP via AWS SES (fallback para reset de senha)
SMTP_HOST=email-smtp.eu-central-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=your_aws_ses_access_key
SMTP_PASS=your_aws_ses_secret_key
SMTP_FROM=suporte@patriciaelias.com.br

# JWT
JWT_SECRET=gerar_string_aleatoria_64_chars_aqui_00000000000000000000000000000000

# Facebook/Instagram
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=https://api.jolu.ai/api/auth/facebook/callback

# Google/YouTube (Post-MVP)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://api.jolu.ai/api/auth/google/callback

# TikTok (Post-MVP)
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_CALLBACK_URL=https://api.jolu.ai/api/auth/tiktok/callback

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Sync Configuration
POSTS_SYNC_INTERVAL_MINUTES=15
MAX_POSTS_PER_ACCOUNT=50

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=9

# Chatwoot Webhook (opcional - para validar assinatura do webhook do Chatwoot)
CHATWOOT_WEBHOOK_SECRET=
